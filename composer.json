{
    "name": "jpcaparas/rulesync",
    "description": "Easily sync all of your favourite AI assistant configuration files ",
    "keywords": ["ai", "assistant", "rules", "synchronization", "claude", "gemini", "cursor", "windsurf", "github-copilot"],
    "homepage": "https://github.com/jpcaparas/rulesync",
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/jpcaparas/rulesync/issues",
        "source": "https://github.com/jpcaparas/rulesync"
    },
    "authors": [
        {
            "name": "JP Caparas",
            "email": "jp@jpcaparas.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel-zero/framework": "^11.0|^12.0",
        "laravel/pint": "^1.22",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.8.2"
    },
    "autoload": {
        "psr-4": {
            "JPCaparas\\Rulesync\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/rulesync"]
}
